{% extends 'base.html.twig' %}
{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}"
                           alt="todo list">{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="task-container">
                {% for task in tasks %}
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <div class="caption">
                                <h4 class="pull-right">
                                    {% if task.isDone %}<span class="glyphicon glyphicon-ok"></span>{% else %}<span
                                            class="glyphicon glyphicon-remove"></span>{% endif %}
                                </h4>
                                <h4><a href="{{ path('app_task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                                <div class="task-content">{{ task.content }}</div>
                                <small>Par {% if task.user == null %}Anonyme{% else %}{{ task.user.username }}{% endif %}</small>
                            </div>
                            <div>
                                <form action="{{ path('app_task_toggle', {'id' : task.id }) }}">
                                    <button class="btn btn-success btn-sm pull-right">
                                        {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                                    </button>
                                </form>
                                {% if (is_granted('ROLE_ADMIN') and task.user == null)
                                    or (app.user == task.user) %}
                                    <form method="post" action="{{ path('app_task_delete', {'id' : task.id }) }}">
                                        <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-warning" role="alert">
                        Il n'y a pas encore de tâche enregistrée.
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
